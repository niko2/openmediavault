set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_SHAIRPORT_CONFIG=${OMV_SHAIRPORT_CONFIG:-"/etc/shairport-sync.conf"}
OMV_SHAIRPORT_GENERAL_OUTPUTBACKEND=${OMV_SHAIRPORT_GENERAL_OUTPUTBACKEND:-"alsa"}
OMV_SHAIRPORT_GENERAL_MDNSBACKEND=${OMV_SHAIRPORT_GENERAL_MDNSBACKEND:-"avahi"}
OMV_SHAIRPORT_GENERAL_INTERPOLATION=${OMV_SHAIRPORT_GENERAL_INTERPOLATION:-"basic"}
OMV_SHAIRPORT_GENERAL_LOGVERBOSITY=${OMV_SHAIRPORT_GENERAL_LOGVERBOSITY:-"0"}
OMV_SHAIRPORT_GENERAL_IGNOREVOLUMECONTROL=${OMV_SHAIRPORT_GENERAL_IGNOREVOLUMECONTROL:-"no"}
OMV_SHAIRPORT_METADATA_ENABLED=${OMV_SHAIRPORT_METADATA_ENABLED:-"yes"}
OMV_SHAIRPORT_METADATA_INCLUDECOVERART=${OMV_SHAIRPORT_METADATA_INCLUDECOVERART:-"yes"}

mkconf() {
	# Create '/etc/shairport-sync.conf' file
	xmlstarlet sel -t -m "//services/shairport" \
	  -o "# This configuration file is auto-generated." -n \
	  -o "# WARNING: Do not edit this file, your changes will be lost." -n \
	  -o "general = " -n \
	  -o "{" -n \
	  -i "string-length(name) > 0" -v "concat('  name = \"',name,'\";')" -n -b \
	  -o "  output_backend = \"${OMV_SHAIRPORT_GENERAL_OUTPUTBACKEND}\";" -n \
	  -o "  mdns_backend = \"${OMV_SHAIRPORT_GENERAL_MDNSBACKEND}\";" -n \
	  -o "  interpolation = \"${OMV_SHAIRPORT_GENERAL_INTERPOLATION}\";" -n \
	  -o "  log_verbosity = ${OMV_SHAIRPORT_GENERAL_LOGVERBOSITY};" -n \
	  -o "  ignore_volume_control = \"${OMV_SHAIRPORT_GENERAL_IGNOREVOLUMECONTROL}\";" -n \
	  -i "passwordrequired[. = '1']" \
		-v "concat('  password = \"',password,'\";')" -n \
	  -b \
	  -o "};" -n \
	  -o "metadata = " -n \
	  -o "{" -n \
	  -o "  enabled = \"${OMV_SHAIRPORT_METADATA_ENABLED}\";" -n \
	  -o "  include_cover_art = \"${OMV_SHAIRPORT_METADATA_INCLUDECOVERART}\";" -n \
	  -o "};" \
	  ${OMV_CONFIG_FILE} | xmlstarlet unesc > ${OMV_SHAIRPORT_CONFIG}
}

case "$1" in
	mkconf|*)
		mkconf
		;;
esac
